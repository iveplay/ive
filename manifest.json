{
  "manifest_version": 3,
  "version": "0.1.0",
  "name": "IVE",
  "short_name": "IVE",
  "description": "Interactive Video Extension - Control your haptics directly from your browser and sync with your favorite videos on any site!",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["sidePanel"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Open IVE"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "content_scripts": [
    {
      "js": ["content/content.tsx"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background/background.ts",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["/*.json", "/*.js", "/*.jpg", "/*.svg", "/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
